{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],

    "lib": [
      "es2018",
      "dom",
    ],
    "paths": {
      "@ha4us/ng": [
        "gui/src/app/ha4us"
      ],
      "@ha4us/ng/*": [
        "gui/src/app/ha4us/*"
      ],
      "@ulfalfa/ng-util": [
        "gui/src/app/ng-util"
      ],
      "@ulfalfa/ng-util/*": [
        "gui/src/app/ng-util/*"
      ],
      "@app/*": [
        "gui/src/app/*"
      ]
    }
  },
  "include": [
    "gui/src/**/*.ts"
  ],
  "exclude": [
    "**/assets/scriptdef/*.ts",
  ]
}
