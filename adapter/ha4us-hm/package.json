{
  "private": true,
  "name": "ha4us-hm",
  "version": "0.5.5-alpha.1",
  "description": "a ha4us adapter for homemmatic",
  "main": "dist/index",
  "author": "ulfalfa",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && yarn build:main",
    "build:main": "tsc -p tsconfig.json",
    "lint": "tslint --project .  src/**/*.ts",
    "watch": "nodemon",
    "changelog": "standard-version",
    "release": "yarn reset && yarn build && yarn changelog",
    "reset": "git clean -dfx && git reset --hard && yarn"
  },
  "dependencies": {
    "binrpc": "^3.1.0",
    "got": "^7.1.0",
    "ha4us": "^0.27.0",
    "homematic-xmlrpc": "^1.0.2",
    "iconv-lite": "^0.4.19",
    "js-yaml": "^3.11.0",
    "yarn": "^1.3.2"
  },
  "peerDependencies": {
    "rxjs": "6.x"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
