{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules"
  ],
  "verbose": true,
  "execMap": {
    "js": "node"
  },
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "watch": [
    "index.js"
  ],
  "env": {
    "NODE_ENV": "development",
    "HA4US_LOGLEVEL": "debug",
    "HA4US_CHAFON_PORT": "/dev/tty.usbserial"
  },
  "ext": "js json"
}
